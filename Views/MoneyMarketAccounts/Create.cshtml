                <label asp-for="AprIfAmountNotMet" class="control-label"></label>
                <input asp-for="AprIfAmountNotMet" class="form-control" />
                <span asp-validation-for="AprIfAmountNotMet" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

