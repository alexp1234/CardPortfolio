@model CardPortfolio.Models.SavingsAccount
@{
    ViewData["Title"] = "Add Savings Account";

}

@Html.HiddenFor(m => m.Id)

<form method="post">

    <div class="form-group">
        @Html.LabelFor(m => m.Id, "Money Market Account Name", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownList("SavingsAccountId", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Add Money Market Account</button>
</form>