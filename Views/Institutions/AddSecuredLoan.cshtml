@model CardPortfolio.Models.SecuredPersonalLoan
@{
    ViewData["Title"] = "Add Secured Loan";

}

@Html.HiddenFor(m => m.Id)

<form method="post">

    <div class="form-group">
        @Html.LabelFor(m => m.Id, "Secured Loan", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownList("Id", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Add Secured Loan</button>
</form>