@model CardPortfolio.Models.HomeEquityLoan
@{
    ViewData["Title"] = "Add Home Equity Loan";

}

@Html.HiddenFor(m => m.Id)

<form method="post">

    <div class="form-group">
        @Html.LabelFor(m => m.Id, "Home Equity LOC Name", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownList("homeEquityLoanId", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Add Loan</button>
</form>