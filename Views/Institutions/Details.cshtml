                            @foreach (var card in ViewBag.CardList)
                            {
                                <p>@card.Name</p>
                                var cardPath = "~/images/" + card.ImagePath;
                                <div class="row">
                                    <div class="col-md-6">
                                        <img src="@Url.Content(cardPath)" class="card-row-pic" />
                                    </div>

                                </div>
                                <!-- Button For Modal-->
                                <button type="button" class="collapsible more-info-button">Info</button>
                                <div class="content">
                                    <div class="row details-section">
                                        <div class="col-md-5 bt-info">
                                            <p class="h5">&nbsp; <i class="fas fa-money-check-alt"></i> &nbsp; APR <hr /></p>
                                            <ul class="card-info-list">
                                                <li>Purchase: @card.LowAPRPurchases% to @card.HighAPRPurchases%  </li>
                                                <li>Balance Transfer: @card.LowAPRBalanceTransfer% to @card.HighAPRBalanceTransfer%</li>
                                                <li>Cash Advance: @card.LowAPRCashAdvance% to @card.HighAPRCashAdvance%</li>
                                            </ul>
                                        </div>
                                        <div class="col-md-2"></div>
                                        <div class="col-md-5 bt-info">
                                            <p class="h5"> &nbsp; <i class="fas fa-money-check-alt"></i> &nbsp; Fees <hr /></p>
                                            <ul class="card-info-list">
                                                <li>Annual Fee: $@card.AnnualFee </li>
                                                <li>Balance Transfer: @card.RegularBalanceTransferFee% of each transaction</li>
                                                <li>Cash Advance: @card.CashAdvanceFee% of each advance</li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="row details-section">
                                        @if (card.HasCashBack)
                                        {
                                            <div class="col-md-5 bt-info">
                                                <p class="h5">&nbsp; <i class="fas fa-money-check-alt"></i> &nbsp; Cash Back <hr /></p>
                                                <ul class="card-info-list">
                                                    <li>@card.Description</li>
                                                </ul>
                                            </div>
                                            <div class="col-md-2"></div>
                                        }
                                        else
                                        {
                                            <div class="col-md-5 bt-info">
                                                <p class="h5">&nbsp; <i class="fas fa-money-check-alt"></i> &nbsp; Cash Back <hr /></p>
                                                <ul class="card-info-list">
                                                    <li>No Cash Back</li>
                                                </ul>
                                            </div>
                                            <div class="col-md-2"></div>
                                        }
                                        @if (card.HasSignUpBonus)
                                        {
                                            <div class="col-md-5 bt-info">
                                                <p class="h5">&nbsp; <i class="fas fa-money-check-alt"></i> &nbsp; Sign Up Bonus  <hr /></p>
