@model CardPortfolio.Models.AutoLoan
@{
    ViewData["Title"] = "Add Auto Loan";
    
}

@Html.HiddenFor(m => m.Id)

<form method="post">

    <div class="form-group">
        @Html.LabelFor(m => m.Id, "Auto Loan Name", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownList("AutoLoanId", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Add Card</button>
</form>