@model CardPortfolio.Models.BlogPost
@{
    ViewData["Title"] = "Unpublish Blog Post";
}

<h1>Unpublish</h1>



<h3>Are you sure you want to unpublish this?</h3>
<div>
    <h4>Blog Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Abstract)
        </dd>


    </dl>

    <form asp-action="Unpublish">
        <input type="submit" value="UnPublish" class="btn btn-danger" /> |
        <a asp-action="PublishedPosts">All Unpublished Posts</a>
    </form>
</div>
